<?xml version="1.0"?>
<ruleset name="LeaRecordShop">
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="45"/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>

    <!-- Show progress of the run -->
    <arg value="nps"/>

    <!-- Folders that will be track -->
    <file>app</file>
    <file>bootstrap/app.php</file>
    <file>config</file>
    <file>database/migrations</file>
    <file>routes</file>
    <file>tests</file>

    <rule ref="Generic.Files.InlineHTML.Found">
        <exclude-pattern>resources/views/*</exclude-pattern>
    </rule>

    <!-- Route files can have file-level docblock anywhere, not only after opening PHP tag -->
    <rule ref="PSR12.Files.FileHeader.IncorrectOrder">
        <exclude-pattern>routes</exclude-pattern>
    </rule>

    <!-- Migrations don't have namespaces -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>database/migrations</exclude-pattern>
    </rule>
    <rule ref="Squiz.Classes.ClassFileName.NoMatch">
        <exclude-pattern>database/migrations</exclude-pattern>
    </rule>

</ruleset>
